package std/math

pub fn min(a: int, b: int): int {
    if (a < b) { a } else { b }
}

pub fn min(a: float, b: float): float {
    if (a < b) { a } else { b }
}


pub fn max(a: int, b: int): int {
    if (a > b) { a } else { b }
}

pub fn max(a: float, b: float): float {
    if (a > b) { a } else { b }
}

pub fn abs(a: int): int {
    if (a < 0) -a 
    else a
}

pub fn abs(a: float): float {
    if (a < 0) -a 
    else a
}